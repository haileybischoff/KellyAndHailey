#ifndef IMAGES_H_
#define IMAGES_H_

#include <stdint.h>

#define SAUCER_HEIGHT 14 // The height of the saucer in pixels.
#define SAUCER_WIDTH 32 // The width of the saucer.

#define ALIEN_HEIGHT 20 // The height of an individual alien in pixels.
#define ALIEN_EXPLOSION_HEIGHT 20 // The height of an alien explosion in pixels.
#define ALIEN_WORD_WIDTH 32 // The width of an individual alien in pixels.
#define HALF_ALIEN_WORD_WIDTH 16 // The width of an individual alien in pixels.

#define TANK_HEIGHT 16 // The tank height in pixels.
#define TANK_WORD_WIDTH 30 // The tank width in pixels.
#define TANK_EXPLOSION_HEIGHT 16 // The height of a tank explosion in pixels.
//Note: the width is the same as tank height for an explosion.

#define BUNKER_HEIGHT 36 // The height of the bunker in pixels.
#define BUNKER_WORD_WIDTH 24 // The width of the bunker in pixels.
#define BUNKER_FULL_BUNKER_WIDTH 48 // The full width of the bunker.
#define BUNKER_BLOCK_HEIGHT 12 // The height of a single bunker block in pixels.
#define BUNKER_BLOCK_WORD_WIDTH 12 // The width of a single bunker block in pixels.

#define FULL_BUNKER_WORD_WIDTH 48 // The width of the bunker in pixels.

#define ALIEN_BULLET_HEIGHT 10 // The height of an alien bullet in pexels.
#define ALIEN_CROSS_BULLET_WORD_WIDTH 6 // The width of the alien cross bullet in pixels.
#define ALIEN_ZIGZAG_BULLET_WORD_WIDTH 4 // The width of the alien zig zag bullet in pixels.
#define TANK_BULLET_HEIGHT 8 // The height of the tank bullet in pixels.
#define TANK_BULLET_WORD_WIDTH 2 // The width of the tank bullet in pixels.

#define LIVES_MESSAGE_HEIGHT 10
#define LIVES_MESSAGE_WIDTH 24

#define SCORE_MESSAGE_HEIGHT 10
#define SCORE_MESSAGE_WIDTH 30

#define NUMBER_HEIGHT 10
#define NUMBER_WIDTH 10

#define COMMA_HEIGHT 14
#define COMMA_WIDTH 6

#define GAME_OVER_MESSAGE_HEIGHT 80
#define GAME_OVER_MESSAGE_WIDTH 32











