#include <stdio.h>
#include "game_play.h"
#include "draw.h"

#define MOVE_TANK_RIGHT_KEY 6
#define MOVE_TANK_LEFT_KEY 4

typedef enum game_state{
	init_st,
	move_tank_right_st,
	move_tank_left_st
} currentState = init_st;

void switchStates(){
	char input;

	input = getChar();

	if(input == MOVE_TANK_LEFT_KEY){
		currentState = move_tank_left_st;
	}
	else if(input == MOVE_TANK_RIGHT_KEY){
		currentState = move_tank_right_st;
	}
}

void game(){
	// Actions
	switch(currentState){
	case init_st:
		break;
	case move_tank_right_st:
		drawTank(TANK_RIGHT);
		break;
	case move_tank_left_st:
		drawTank(TANK_LEFT);
		break;
	default:
		break;
	}


}
